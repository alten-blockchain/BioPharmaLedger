{
  "name": "track-and-trace-server",
  "version": "1.0.0",
  "description": "Middleware for Track & Trace demo app built on BlockApps STRATO",
  "main": "index.js",
  "repository": "https://github.com/blockapps/track-and-trace",
  "author": "BlockApps Inc.",
  "license": "MIT",
  "dependencies": {
    "blockapps-rest": "git://github.com/blockapps/blockapps-rest#v6.2.10",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "co-mocha": "^1.2.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-winston": "^3.0.1",
    "jwt-decode": "^2.2.0",
    "moment": "^2.24.0",
    "winston": "^3.2.0"
  },
  "scripts": {
    "deploy": "mocha dapp/dapp/dapp.deploy.js --config config/${SERVER:-localhost}.config.yaml -b && cp config/${SERVER:-localhost}.config.yaml config.yaml",
    "start": "node index.js",
    "token-getter": "PORT=${PORT:-443} node node_modules/blockapps-rest/oauth-token-getter/index.js",
    "test:asset": "mocha dapp/asset/test --config config/${SERVER:-localhost}.config.yaml -b",
    "test:e2e": "mocha test/v1 --config config/${SERVER:-localhost}.config.yaml",
    "test:permissions": "mocha dapp/ttPermission/test/ttPermissionManager.test.js --config config/${SERVER:-localhost}.config.yaml",
    "test": "yarn test:asset && yarn test:permissions && yarn test:e2e"
  },
  "devDependencies": {
    "chai-http": "^4.2.1"
  }
}
